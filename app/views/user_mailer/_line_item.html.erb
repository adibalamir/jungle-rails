<% if product = Product.find_by(id: item["product_id"]) %>
  <% item_total = product.price * item["quantity"] %>
  <% @order_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <p>$<%= product.price %></p>
    </td>
    <td>
      <%= item["quantity"] %>
    </td>
    <td>
      <p>$<%= item_total %></p>
    </td>
  </tr>
<% end %>